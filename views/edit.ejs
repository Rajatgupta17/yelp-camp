<%- include("partials/header"); %>

		<div class="container" style="width: 550px; margin-top: 6%; border: 4px solid grey; padding: 25px; border-radius: 5px;">
		<h1 style="color: grey;">
	Edit <%= campground.name %>
</h1>

<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
	<div class="form-group">
	  <label for="exampleInputEmail1">Name</label>
	  <input type="text" name="campground[name]" value="<%= campground.name %>" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
	  <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
	</div>
	<div class="form-group">
		<label for="exampleInputPassword1">Price</label>
		<input type="text" name="campground[price]" class="form-control" value="<%= campground.price %>" id="exampleInputPassword1" min="0.1" step="0.1">
	  </div>
	<div class="form-group">
	  <label for="exampleInputPassword1">Image URL</label>
	  <input type="text" name="campground[image]" class="form-control" value="<%= campground.image %>" id="exampleInputPassword1">
	</div>
	<div class="form-group">
		<label for="exampleFormControlTextarea1">Description</label>
		<textarea name="campground[description]" class="form-control" id="exampleFormControlTextarea1" rows="3"><%= campground.description %></textarea>
	  </div>
	<button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
<%- include("partials/footer") %>

	