<%- include("partials/header") %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
        <p class="lead">Yelp Camp</p>
        <div class="list-group">
            <li class="list-group-item active">Category 1</li>
            <li class="list-group-item">Category 2</li>
            <li class="list-group-item">Category 3</li>
        </div>
    </div>
    <div class="col-md-9">
        <div class="img-thumbnail">
            <img src="<%= campgrounding.image %>" class="img-responsive" style="width: 100%; height: 500px;"> 
            <div class="caption-full">
                <h5 class="float-right">$<%= campgrounding.price %>/night</h5>
                <h5><%= campgrounding.name %></h5>
                <p><%= campgrounding.description %></p>
                <p><em>Submitted by:- <%= campgrounding.author.username %></em></p>
                <hr>
                <% if(currentUser.id && campgrounding.author.id.equals(currentUser.id)) { %>
                <a href="/campgrounds/<%=campgrounding._id%>/edit"  class="btn btn-success" style="color: white;">Edit</a>
                <form id="delete-form" action="/campgrounds/<%=campgrounding._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
                </form>
                <% }%>
           
            </div>
        </div>
        <div class="well">
            <div class="text-right">
            <a class="btn btn-sm btn-success"  style="margin-top: 9px;" href="/campgrounds/<%=campgrounding._id %>/comments/new">Add Comment</a>
            </div>
            <hr>
            <h5>Comments</h5>
    <% campgrounding.comments.forEach(function(comment){  %>
            <div class="row">
                <div class="col-md-12">
                    <strong><%= comment.author.username %></strong>
                    <span class="float-right">10 days ago</span>
                    <p><%=comment.text %></p>
                    <a href="/campgrounds/<%=campgrounding._id %>/comments/<%=comment._id%>/edit" class="btn btn-sm btn-warning">Edit</a>
                    <form style="display: inline;" action="/campgrounds/<%=campgrounding._id %>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                    <input type="submit" class="btn btn-sm btn-danger" value="Delete">
                    </form>
                </div>
            </div>
            <% }); %>
        </div>        
    </div>
    </div>
